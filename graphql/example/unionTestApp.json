{
    "_id": "test-union",
    "descriptor": {
      "name": "test-enum",
      "description": "GraphQL App using Union",
      "enabled": true,
      "uri": "test-union"
    },
    "schema": "enum Level { ENTRY, MEDIUM, ADVANCED } union Course = InternalCourse | ExternalCourse type InternalCourse { _id: ObjectId, title: String, level: Level } type ExternalCourse { _id: ObjectId, title: String, level: Level, deliveredBy: String } type Query { AllCourses: [Course], AllInteranalCourses: [InternalCourse], AllExternalCourses: [ExternalCourse] }",
    "mappings":{
      "Course": {
          "$typeResolver": {
            "InternalCourse": "not doc-contains(external)",
            "ExternalCourse": "doc-field-eq(field=external, value=true)"
        }
      },
      "Level": {
          "ENTRY": 0,
          "MEDIUM": 1,
          "ADVANCED": 2
      },
      "Query": {
        "AllInteranalCourses":{
          "db": "restheart",
          "collection": "courses",
          "find": { "external": null },
          "sort": { "_id": -1 }
        },
        "AllExternalCourses":{
          "db": "restheart",
          "collection": "courses",
          "find": { "external": true },
          "sort": { "_id": -1 }
        },
        "AllCourses":{
          "db": "restheart",
          "collection": "courses",
          "find": { },
          "sort": { "_id": -1 }
        }
      }
    }
  }